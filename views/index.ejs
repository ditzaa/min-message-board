<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <h2><%= title %></h2>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/new">New Message</a></li>
      </ul>
    </nav>

    <ul>
      <% for (let i = 0; i < messages.length; i++) { %>
      <li>
        <h4><%= messages[i].user %></h4>
        <p><%= messages[i].text %></p>
        <!-- <h4><%= messages[i].added %></h4> -->
        <button><a href="/details/<%= messages[i].id %>">Details</a></button>
      </li>
      <% } %>
    </ul>
  </body>
</html>
